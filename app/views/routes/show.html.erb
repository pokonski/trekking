  function addMarker(pos,desc){
    var marker = new google.maps.Marker({
        position: pos,
        draggable: true,
        map: map
    });
    google.maps.event.addListener(marker, 'dblclick', function(e) {
      marker.setMap(null);
      var index = $.inArray(marker,markers);
      if (index > -1)
        markers.splice(index,1);
      drawPath();
      saveRoute();
    });
    google.maps.event.addListener(marker, 'drag', function(e) {
      drawPath();
    });
    google.maps.event.addListener(marker, 'dragend', function(e) {
      saveRoute();
    });
    markers.push(marker);

    drawPath();
    printLocations();
  }
  function clearPath() {
    if (path)
      path.setMap(null);
  }
  function drawPath(){
    clearPath();


    var line = [];
    $.each(markers,function(index,marker){
      line.push(marker.position);
    });
    path = new google.maps.Polyline({
      path: line,
      strokeColor: "#FF0000",
      strokeOpacity: 1.0,
      strokeWeight: 2
    });
    path.setMap(map);
    $('#distance').text((path.Distance()/1000).toFixed(2)+" km");
  }

  function printLocations(){
    var debug = $('#debug');
    debug.text('');
    $.each(markers,function(index,marker){
      debug.append($("<li/>").text(marker.position.toString()));
    });
  }

  function saveRoute(){
    var data = {route: {locations: []}};
    $.each(markers,function(index,marker){
      data["route"]["locations"].push(marker.position.lat()+","+marker.position.lng());
    });
    $.ajax({
      url: '<%= route_path(@route, :json) %>',
      type: 'PUT',
      data: data
    });
  }
</script>