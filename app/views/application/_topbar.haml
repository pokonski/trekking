%nav.topbar-wrapper{style: "z-index: 5;"}
  .topbar{"data-dropdown" => "dropdown"}
    .topbar-inner
      .container
        %h3= link_to "Trekking", root_url
        %ul.nav
          %li= link_to "Homepage", root_path
          %li.dropdown{"data-dropdown" => "dropdown"}
            = link_to "Routes", routes_path, :class => "dropdown-toggle"
            %ul.dropdown-menu
              %li= link_to "All routes", routes_path
              %li= link_to "New route", new_route_path
        = form_tag search_routes_path do
          %input{type: "text", name: "address", placeholder: "Type location to find routes near it"}
        %ul.nav.secondary-nav
          - if user_signed_in?
            %li.dropdown{"data-dropdown" => "dropdown"}
              %a.dropdown-toggle{href: "#"}= current_user.email
              %ul.dropdown-menu
                %li= link_to "Profile", edit_user_registration_path
                %li.divider
                %li= link_to "Sign out", destroy_user_session_path, :method => :delete
          - else
            %li= link_to "Register", new_user_registration_path
            %li= link_to "Sign in", new_user_session_path